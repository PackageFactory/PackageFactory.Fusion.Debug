root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{yaml,yml}]
indent_size = 2

[{package.json,.babelrc,.eslintrc,.stylelintrc}]
indent_size = 2

[*.{css,js,ts,neon}]
indent_style = tab

[Makefile]
indent_style = tab

[*.makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
